<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="post-form" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="postTitle" id="postTitle" autocomplete="off" required>
  </div>

  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea class="form-control" name="postContent" id="postContent" autocomplete="off" rows="6" required></textarea>
  </div>

  <button class="btn" type="submit">Publish</button>

</form>

<%- include('partials/footer'); -%>