<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= content %></p>

<% posts.forEach(post => { %>
  <div class="post">
    <h2 class="title">
      <%= post.title %>
    </h2>
    <h3 class="date">
      <%= post.date %>
    </h3>
    <div class="content">
      <%= post.content.substring(0, 85) + '... ' %>
      <a href="/posts/<%= post._id %>">Read more!</a>
    </div>
  </div>
<% }); %>

<%- include('partials/footer'); -%>